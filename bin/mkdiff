#!/bin/sh

name=$(make show=PKGNAME)
fname="${HOME}/patches/${name}.diff"

if [ -d CVS ]; then
	cvs diff . > "$fname"
else
	git diff . > "$fname"
fi
echo "Created: $fname"
echo "Syncing..."
rsync -a ${HOME}/patches/ web.akb.io:/var/www/deftly/patches/
URL="https://deftly.net/patches/${name}.diff"
echo -n "${URL}" | xclip
echo "Copied '${URL}' to clipboard.."
