#!/bin/ksh

FORMAT="%A %l:%M"

BAT_CHARG=""
BAT_PER=""
BAT_STAT=""

set_bat() {
	BS=$1
	BAT_PER=$2
	AC=$3

	if [ $AC -ne 255 -o $BS -lt 4 ]; then
		case $AC in
			0) 
				BAT_CHARG="-"
				;;
			[1-2])
				BAT_CHARG="+"
				;;
			*)
				BAT_CHARG="?"
				;;
		esac;
		case $BS in
			0) 
				BAT_STAT="High"
				;;
			1)
				BAT_STAT="Low"
				;;
			2)
				BAT_STAT="CRIT!"
				;;
			*)
				BAT_STAT="?"
				;;
		esac;
			
	fi
}

while :; do
	set_bat $( /usr/sbin/apm -alb )
	HOST="$( hostname -s )"
	CPU="CPU: $( /sbin/sysctl hw.cpuspeed | cut -d "=" -f2 )MHz"
	BAT="Bat: ${BAT_CHARG}${BAT_PER}% ${BAT_STAT}"
	MEM="Mem: $(/usr/bin/top | grep Free: | cut -d " " -f6 )"
	DATE=$( /bin/date "+${FORMAT}" )
	VOL=$( mixerctl outputs.master |  cut -d "," -f2 )
	VOL=$(( $VOL * 100 / 256 ))
	VOL="Vol: ${VOL} %"
	echo -e "< ${HOST} | ${CPU} | ${MEM} | ${BAT} | ${VOL} | ${DATE} >"
	sleep 5;
done
