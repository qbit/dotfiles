#!/bin/ksh

FORMAT="%A %l:%M"

BAT_CHARG=""
BAT_PER=""
BAT_STAT=""

spark=~/bin/spark

red="\x04"
normal="\x01"
yellow="\x03"

set_bat() {
	BS=$1
	BAT_PER=$2
	AC=$3

	if [ $AC -ne 255 -o $BS -lt 4 ]; then
		case $AC in
			0) 
				BAT_CHARG="-"
				;;
			[1-2])
				BAT_CHARG="+"
				;;
			*)
				BAT_CHARG="?"
				;;
		esac;
		case $BS in
			0) 
				# BAT_STAT="${normal}High${normal}"
				BAT_STAT="High"
				;;
			1)
				# BAT_STAT="${yellow}Low${normal}"
				BAT_STAT="Low"
				;;
			2)
				# BAT_STAT="${red}CRIT!${normal}"
				BAT_STAT="CRIT!"
				;;
			*)
				BAT_STAT="?"
				;;
		esac;
			
	fi
}

while true; do
	set_bat $( /usr/sbin/apm -alb )
	HOST="$( hostname -s )"
	AP=$( ifconfig | grep ieee80211 | awk '{print $3}' )
  DB=$( ifconfig | awk '/ieee/ {print $8}' | cut -d d -f 1 )

  GR=""

  if [ $DB -gt 50 ]; then
    GR=$( $spark 0 1 2 3 )
  fi

  if [ $DB -lt 50 ] && [ $DB -gt 45 ]; then
    GR=$( $spark 0 1 2 )
    GR="${GR} "
  fi

  if [ $DB -lt 45 ] && [ $DB -gt 35 ]; then
    GR=$( $spark 0 1 )
    GR="${GR}  "
  fi

  if [ $DB -lt 35 ]; then
    GR=$( $spark 0 )
    GR="${GR}   "
  fi

  if [ "$GR" == "" ]; then
    GR="â—¯"
  fi

	CPU="CPU: $( /sbin/sysctl hw.cpuspeed | cut -d "=" -f2 )MHz"
	BAT="Bat: ${BAT_CHARG}${BAT_PER}% ${BAT_STAT}"
	MEM="Mem: $(/usr/bin/top | grep Free: | cut -d " " -f6 )"
	DATE=$( /bin/date "+${FORMAT}" )
	VOL=$( mixerctl outputs.master |  cut -d "," -f2 )
	VOL=$(( $VOL * 100 / 256 ))
	VOL="Vol: ${VOL} %"
	xsetroot -name "< ${HOST} | AP: ${AP} ${GR} | ${CPU} | ${MEM} | ${BAT} | ${VOL} | ${DATE} >"
	sleep 5;
done
