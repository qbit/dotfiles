[user]
  name = Aaron Bieber
  email = aaron@bolddaemon.com

[alias]
  rmdel = !git rm `git ls-files --deleted`
  upsync = !cvs up && gitsync && git commit -m 'sync'
  mpush = !git remote | xargs -J % -L 1 git push % master
  mpull = !git remote | xargs -J % -L 1 git pull % master
  mup = !git remote update
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  graph = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
  sshow = "!f() { git stash show stash^{/$*} -p; }; f"
  sapply = "!f() { git stash apply stash^{/$*}; }; f"

[push]
	default = simple
[color]
	ui = auto
[core]
	deltaBaseCacheLimit = 1G
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[http]
	cookiefile = /home/qbit/.gitcookies
