#!/bin/sh

SCT=/usr/local/bin/sct

if [ ! -e "$SCT" ]; then
    echo "Please install sct!"
    exit 1;
fi

while true; do
    H=$(date "+%H")
    echo "Currently ${H}"
    case $H in
	01) $SCT 4000;;
	02) $SCT 4100;;
	03) $SCT 4200;;
	04) $SCT 4300;;
	05) $SCT 4400;;
	06) $SCT 4500;;
	07) $SCT 5500;;
	15) $SCT 5000;;
	16) $SCT 4500;;
	17) $SCT 4000;;
	18) $SCT 3700;;
	*)
	    $SCT;;
    esac
    sleep 1800
done

