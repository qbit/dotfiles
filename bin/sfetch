#!/bin/sh

ITEM=$1
V=$(uname -r | sed 's/\.//')

ftp -C -o "${PWD}/${ITEM}" "https://cdn.openbsd.org/pub/OpenBSD/snapshots/$(machine)/${ITEM}" && \
ftp -CVM -o "${PWD}/SHA256.sig" "https://cdn.openbsd.org/pub/OpenBSD/snapshots/$(machine)/SHA256.sig"

signify -C -p "/etc/signify/openbsd-${V}-base.pub" -x SHA256.sig "${ITEM}"
