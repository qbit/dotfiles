#!/bin/ksh

# spark taken from holman: https://github.com/holman/spark
# converted for ksh

set -A numbers $@
set -A ticks ▁ ▂ ▃ ▄ ▅ ▆ ▇ █

min=0xffffffff
max=0

for n in ${@}; do
  (( n < min )) && min=$n
  (( n > max )) && max=$n
  numbers=$numbers${numbers:+ }$n
done


f=$(( (($max-$min)<<8)/(${#ticks[@]}-1) ))
(( f < 1 )) && f=1

for n in $numbers; do
  echo -n ${ticks[$(( ((($n-$min)<<8)/$f) ))]}
done
echo ""
