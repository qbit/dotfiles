#!/bin/sh

SCT=/usr/local/bin/sct

if [ ! -e "$SCT" ]; then
    echo "Please install sct!"
    exit 1;
fi

while true; do
    H=$(date "+%H")
    echo "Currently ${H}"
    case $H in
	01) $SCT 4000;;
	02) $SCT 4100;;
	03) $SCT 4200;;
	04) $SCT 4300;;
	05) $SCT 4400;;
	06) $SCT 4500;;
	07) $SCT 4900;;
	08) $SCT 5000;;
	09) $SCT 5500;;
	10) $SCT 5500;;
	11) $SCT 5500;;
	12) $SCT 5500;;
	13) $SCT 5500;;
	14) $SCT 5500;;
	15) $SCT 5300;;
	17) $SCT 5000;;
	18) $SCT 4700;;
	19) $SCT 4300;;
	20) $SCT 4000;;
	21) $SCT 3700;;
	22) $SCT 3700;;
	23) $SCT 3700;;
    esac
    sleep 1800
done

